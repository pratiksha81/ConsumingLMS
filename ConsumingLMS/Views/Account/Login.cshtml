@model ConsumingLMS.Models.Authentication.LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HSMSS Library Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: "Outfit", sans-serif;
        }

        .log-in-form {
            display: flex;
            height: 100%;
            background-color: #ffffff;
        }

        .login, .register {
            flex: 1;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            padding: 20px;
            border-radius: 20px 0px 0px 20px;
        }

        .login {
            background: #ffffff;
            color: #000;
        }

        .register {
            background: #255d81;
            color: #fff;
        }

        h1, h2 {
            font-size: 40px;
            text-align: center;
        }

        p {
            font-size: 24px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            width: 100%;
            max-width: 450px;
        }

            .form-group input {
                width: 100%;
                padding: 10px 20px;
                border: 1px solid #000;
                border-radius: 30px;
                font-size: 20px;
                color: #6a6a6a;
            }

        .forgot-password {
            font-size: 20px;
            text-align: center;
            margin-top: 10px;
            cursor: pointer;
        }

        .login-btn, .register-btn {
            padding: 15px 40px;
            border: none;
            border-radius: 30px;
            font-size: 20px;
            font-weight: bold;
            cursor: pointer;
            margin-top: 20px;
        }

        .login-btn {
            background: #255d81;
            color: #fff;
        }

        .register-btn {
            background: #d9d9d9;
            color: #000;
        }

        .image-preview {
            max-width: 100%;
            height: auto;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="log-in-form">
        <!-- Log In Section (Left) -->
        <form asp-action="Login" method="post" class="login">
            <img src="/images/LMS1.png" alt="Library Logo" class="image-preview">
            <h2>HSMSS Library Management System</h2>
            <p>Please enter your credentials</p>

            <div class="form-group">
                <input name="Username" class="form-control" placeholder="Username">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input name="Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="forgot-password">Forgot Password?</div>

            <button type="submit" class="login-btn">Log In</button>

            @if (ViewBag.ErrorMessage != null)
            {
                <p class="text-danger">@ViewBag.ErrorMessage</p>
            }
        </form>

        <!-- Register Section (Right) -->
        <div class="register">
            <img src="/images/LMS2.png" alt="Library Illustration" class="image-preview">
            <h1>HSMSS Library</h1>
            <p>New to our platform?</p>
            <p><strong>Register Now</strong></p>
            <a asp-action="SignUp" class="btn register-btn">Register</a>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
